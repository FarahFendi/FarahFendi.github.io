      $(this).toggleClass('show-description');
  });
  
  function first(){
    //alert("One bed, living room, outside window view, kitchen, bathroom");
    	rooms = document.getElementById("hotel")
    	rooms.innerHTML = ''
    items = document.getElementsByClassName("item")
    for (i=0; i<3; i=i+1) {
	    rooms.innerHTML += luxuryonebedroomDivs[i]
		  items[i].style.background = luxuryonebedroomImages[i]
		  items[i].style.backgroundSize = '100% 100%'
     }  
  }
  
  function second(){
    //alert("Two beds, kitchen, wonderful window view, bathroom");
    items = document.getElementsByClassName("item")
    rooms = document.getElementById("hotel")
    rooms.innerHTML = ''
    for (i=0; i<3; i=i+1) {
      rooms.innerHTML += familyroomDivs[i]
		  items[i].style.background = familyroomImages[i]
		  items[i].style.backgroundSize = '100% 100%'
     }  
  } 
  
  function third(){
    //alert("Two beds, dining and living room, kitchen, full bathroom and more");
    items = document.getElementsByClassName("item")
    rooms = document.getElementById("hotel")
    rooms.innerHTML = ''
    for (i=0; i<3; i=i+1) {
	    rooms.innerHTML += SUITEDivs[i]
		  items[i].style.background = SUITEtwobedImages[i]
		  items[i].style.backgroundSize = '100% 100%'
     }  
  }
